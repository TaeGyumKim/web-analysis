{
  "name": "nuxt-web-perf",
  "version": "1.0.0",
  "description": "Web Performance Analyzer - 웹 페이지 로딩 성능 분석 및 시각화 도구 (Nuxt 3 + Puppeteer + Chart.js)",
  "type": "module",
  "private": true,
  "keywords": [
    "web-performance",
    "performance-analysis",
    "nuxt3",
    "puppeteer",
    "chartjs",
    "web-vitals",
    "fcp",
    "lcp",
    "tbt",
    "performance-metrics"
  ],
  "author": "Web Performance Team",
  "license": "MIT",
  "scripts": {
    "build": "npm run prepare:tsconfig && nuxt build",
    "dev": "nuxt dev",
    "generate": "npm run prepare:tsconfig && nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare:tsconfig": "test -f .nuxt/tsconfig.json && cp .nuxt/tsconfig.json .nuxt/tsconfig.app.json || true",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui"
  },
  "dependencies": {
    "@nuxtjs/tailwindcss": "^6.14.0",
    "chart.js": "^4.5.1",
    "lighthouse": "^13.0.1",
    "nuxt": "3.19.3",
    "puppeteer": "^24.29.1",
    "vue": "^3.5.24",
    "vue-chartjs": "^5.3.3",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1"
  }
}
